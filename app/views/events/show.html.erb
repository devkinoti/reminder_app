<% provide(:title, "#{@event.title} Reminder") %>

<%= render "shared/app_sidebar" %>

<section id="main-dashboard-content">
  <p class="welcome-title-user"> Hi, Chris </p>
  <h2 id="welcome-title">Your <%= @event.title %> reminder </h1>
  
    <section id="activities-section">
        <div class="activities-actions">
            <%= link_to "Return to Calendar", dashboard_path,class: "event-return-to-dashboard-btn"%>
        </div>
    </section>
        <section id="events-container">
          <div class="all-events-list">
            <div class="event-detailed-info-sidebar">
              <div class="event-sidebar-info-wrapper">
                <div class="event-collection">
                  <div class="event-collection-title">Aquamarine Reminders</div>
                  <div class="event-collection-link"><%= link_to "Aquamarine", aquamarine_events_path %><span class="reminder-dot" style="background-color:aquamarine"></div>
                </div>
                <div class="event-collection">
                  <div class="event-collection-title">DarkSlateBlue Reminders</div>
                  <div class="event-collection-link"><%= link_to "DarkSlateBlue", darkslateblue_events_path %><span class="reminder-dot" style="background-color:darkslateblue"></div>
                </div>
                <div class="event-collection">
                  <div class="event-collection-title">DeepSkyBlue Reminders</div>
                  <div class="event-collection-link"><%= link_to "DeepSkyBlue", deepskyblue_events_path %><span class="reminder-dot" style="background-color:deepskyblue"></div>
                </div>
                <div class="event-collection">
                  <div class="event-collection-title">Dark Violet Reminders</div>
                  <div class="event-collection-link"><%= link_to "DarkViolet", darkviolet_events_path %><span class="reminder-dot" style="background-color:darkviolet"></div>
                </div>
                <div class="event-collection">
                  <div class="event-collection-title">ForestGreen Reminders</div>
                  <div class="event-collection-link"><%= link_to "ForestGreen", forestgreen_events_path %><span class="reminder-dot" style="background-color:forestgreen"></div>
                </div>
                <div class="event-collection">
                  <div class="event-collection-title">LightCoral Reminders</div>
                  <div class="event-collection-link"><%= link_to "LightCoral", lightcoral_events_path %><span class="reminder-dot" style="background-color:lightcoral"></div>
                </div>
                <div class="event-collection">
                  <div class="event-collection-title">LightSalmon Reminders</div>
                  <div class="event-collection-link"><%= link_to "LightSalmon", lightsalmon_events_path %><span class="reminder-dot" style="background-color:lightsalmon"></div>
                </div>
                <div class="event-collection">
                  <div class="event-collection-title">Purple Reminders</div>
                  <div class="event-collection-link"><%= link_to "Purple", purple_events_path %><span class="reminder-dot" style="background-color:purple"></div>
                </div>
              
              </div>
            </div>
          </div>
          <div class="event-detailed-info">
            <div class="event-detailed-info-event-sidebar">
              <%= image_tag "tenant_user_final.png", class: "event-user-profile-image" %>
                
              <div class="event-sidebar-event-info-wrapper">
                <div class="event-notifications">
                  <% if @event.all_day? %>
                    <span class="allday-status">All Day Reminder</span>
                  <%else%>
                    <span class="onetime-status">One Time Reminder</span>
                  <%end%>
                </div>
              </div>
            </div>
            <div class="event-detailed-info-main-content">
              <div class="event-object-actions">
                <%= link_to "Edit Reminder", edit_event_path(@event),class: "event-action-btn"%>
                <%= link_to "Destroy Reminder", event_path(@event),method: :delete,data: {confirm: "Are you sure you want to delete this reminder?"},class: "event-archive-btn" %>
              </div>
              <div class="event-general-info-title">Reminder Information</div>
              <div class="event-general-info">
                <div class="event-general-info-column-1">
                  <div class="event-attribute">
                    <div class="event-attribute-title">Reminder's Title</div>
                    <div class="event-attribute-full"><%= @event.title %></div>
                  </div>
                  <div class="event-attribute">
                    <div class="event-attribute-title">Date Reminder was created</div>
                    <div class="event-attribute-full"><%= @event.created_at.strftime("%B %d, %Y at %I:%M %p")%></div>
                  </div>
                  <div class="event-attribute">
                    <div class="event-attribute-title">Date Reminder was updated</div>
                    <div class="event-attribute-full"><%= @event.updated_at.strftime("%B %d, %Y at %I:%M %p")%></div>
                  </div>
                </div>
                <div class="event-general-info-column-2">
                  <div class="event-attribute">
                    <div class="event-attribute-title">Reminder's Color Code</div>
                    <div class="event-attribute-full"><%= @event.event_color %><span class="reminder-dot" style="background-color:<%= @event.event_color%>"></div>
                  </div>
                  <div class="event-attribute">
                    <div class="event-attribute-title">Reminder's Starting Time</div>
                    <div class="event-attribute-full"><%= @event.start_time.strftime("%B %d, %Y at %I:%M %p")%></div>
                  </div>
                  <div class="event-attribute">
                    <div class="event-attribute-title">Reminder's Ending Time</div>
                    <div class="event-attribute-full"><%= @event.end_time.strftime("%B %d, %Y at %I:%M %p")%></div>
                  </div>
                </div>
                </div>

              </div>
            </div>
          </div>
          </div>
        </section>
</section>