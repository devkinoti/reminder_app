<% provide(:title, "All Reminders") %>

<%= render "shared/app_sidebar" %>

<section id="main-dashboard-content">
  <p class="welcome-title-user">Hi, Chris</p>
  <h2 id="welcome-title">All Your reminders</h1>
    <section id="activities-section">
        <div class="activities-actions">
            <%= link_to "Return to Calendar", dashboard_path,class: "event-return-to-dashboard-btn"%>
            
        </div>
    </section>

    
    <section id="system-activities">
        <div id="system-activities-container">
        <% @all_reminders.each do |reminder| %>
          <div class="system-activity-icon">
            <%= image_tag "reminder.png", alt: "system_activity_icon" %>
          </div>
          <div class="system-activity">
            <div class="system-activity-details">
              <div class="system-activity-time">
                <p>Created on</p>
                <p><%= reminder.created_at.strftime("%B %d, %Y at %I:%M %p")%></p>
              </div>
              <div class="system-activity-info">
                <div class="system-activity-user-action">           
                  <p><%= reminder.title %><span class="reminder-dot" style="background-color:<%= reminder.event_color%>"></span></p>
                </div>
                <div class="system-activity-property-name">
                  <p>created_by devise user</p>
                </div>
              </div>
              <div class="system-activity-actions">
                <%= link_to "View", reminder, class: "view-event-btn" %>
              </div>
            </div>
          </div>
        <%end%>
        </div>
    </section>
    <section class="pagination digg_pagination">
      <%= will_paginate @all_reminders %>
    </section>
</section>


