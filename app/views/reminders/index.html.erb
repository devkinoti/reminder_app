<% provide(:title, "Dashboard") %>

<%= render "shared/app_sidebar" %>

<section id="main-dashboard-content">
<p class="welcome-title-user"> Hi, Chris </p>
  <h2 id="welcome-title">Your reminders</h1>
  
  <section id="properties-section">
    <div class="properties-actions">
    </div>

  </section>
  <section id="calendar-section">
    <%= content_tag :div, data: { controller: 'calendar' } do %>
      <%= content_tag :div, class: 'modal', data: { target: 'calendar.modal' } do %>
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <%= form_with model: Event.new, local: true do |form| %>
              <div class="modal-body">
                <div class="field">
                  <%= form.label :title %>
                  <%= form.text_field :title %>
                </div>

                <div class="field">
                  <%= form.label :all_day %>
                  <%= form.check_box :all_day %>
                </div>

                <div class="field">
                  <%= form.label :start_time %>
                  <%= form.datetime_select :start_time %>
                </div>

                <div class="field">
                  <%= form.label :end_time %>
                  <%= form.datetime_select :end_time %>
                </div>

              </div>
              <div class="modal-footer">
                <%= form.submit class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <%= tag :div, data: { target: 'calendar.calendar' } %>
    <% end %>
    
  </section>
</section>

